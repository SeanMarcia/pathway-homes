<div ng-controller="IndexController">
<h1>Service Requests</h1>
<table class="table table-striped table-responsive service-requests-index">
  <thead>
    <tr>
      <th class="request-id-th" >Request ID</th>
      <th class="created-th" >Created</th>
      <th class="status-th" >Status</th>
      <th class="staff-assigned-th" >Staff Assigned</th>
      <th class="details-th" >Details</th>
      <th>View</th>
    </tr>
  </thead>
  <tbody>
    <tr ng-repeat="request in requests">
      <td>{{request.id}}</td>
      <td>{{request.created_at | date : 'mediumDate' }}</td>
      <td>{{request.status}}</td>
      <td>{{request.assignee.name}}</td>
      <td>{{request.work_desc}}</td>
      <td><a href="/service_requests/{{request.id}}">View</a></td>

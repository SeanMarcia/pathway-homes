<div ng-controller="UsersCtlr">
  <h1>Create New User</h1>
  <%= form_for(@user, html: {method: "post", 
                                        name: "form",
                                        class: "form form-horizontal", 
                                        role: "form"}) do |f| %>
    <div class="form-group">
      <label class="col-sm-2 control-label">Name</label>
      <div class="col-sm-10">
        <%= f.text_field :name, 
          class: 'form-control', 
          required: true,
          'ng-model' => 'user.name' %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Email</label>
      <div class="col-sm-10">
        <%= f.text_field :email, 
          class: 'form-control', 
          required: true,
          'ng-model' => 'user.email' %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Set Password</label>
      <div class="col-sm-10">
        <%= f.password_field :password, 
          class: 'form-control', 
          required: true,
          'ng-model' => 'user.password' %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Role</label>
      <div class="col-sm-10">
      	<% role_select = [['Admin','admin'],['Staff','staff']] %>
        <%= f.select :role, role_select, {},
          class: 'form-control', 
          required: true,
          'ng-model' => 'user.role' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Submit', class: 'btn btn-default',
          'ng-click' => 'save($event)' %>
      </div>
    </div>
<% end -%>
</div>
